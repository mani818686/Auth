<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/StyleLinks.ejs') %>
    <link rel="stylesheet" href="../CSS/form.css">
</head>
<body>
    <%- include('./page-partials/navbar.ejs') %>
    <h1 style="text-align: center;">Login</h1>
    <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-1 col-lg-offset-3 col-md-6 col-xs-10 col-sm-6 col-lg-6 col-md-offset-3 col-xs-offset-1 col-sm-offset-3 col-lg-offset-3">
        <form class="myform" action="/auth/login" method="POST">
          <% if (message) { %> 
            <h4><div class="alert alert-danger text-center"><%= message %></div></h4>
          <% } %>
          <div class="form-group">
            <label for="username">User Name</label>
            <input type="username" required class="form-control" name="username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" required class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
          <p style="margin-top: 10;"><b>Don't have an account?</b>  <a href="/register">click here</a></p><br>
          <div class="col" style="margin-left : -15px;">
            <a href="/auth/google" class="google btn" style="border: solid">
              <i class="fa fa-google fa-fw"></i> Login with Google+
            </a>
            <a href="/auth/facebook" class="fb btn" style="border: solid">
              <i class="fa fa-facebook fa-fw"></i> Login with Facebook
            </a>
          </div>
        </form>
    </div>
    <%- include('./partials/ScriptLinks.ejs') %>
</body>
</html>